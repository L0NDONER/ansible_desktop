# Local Ubuntu machine
[ubuntu]
localhost ansible_connection=local

# Raspberry Pi hosts
[pi]
pihole ansible_host=10.0.0.122

# Group variables
[ubuntu:vars]
ansible_python_interpreter=/usr/bin/python3

[pi:vars]
ansible_python_interpreter=/usr/bin/python3
ansible_user=martin
ansible_ssh_private_key_file=/home/martin/.ssh/pi-hole

